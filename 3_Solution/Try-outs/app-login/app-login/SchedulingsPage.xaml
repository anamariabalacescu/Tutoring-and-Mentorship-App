<Page x:Class="app_login.SchedulingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_login"
      mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="400"
      Title="ChangePwd">

    <Grid>
        <DataGrid x:Name="myDataGrid" AutoGenerateColumns="False" Background="Transparent">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Professor" Binding="{Binding ProfessorName}" />
                <DataGridTextColumn Header="Student" Binding="{Binding StudentName}" />
                <DataGridTextColumn Header="Subject" Binding="{Binding SubjectName}" />
                <DataGridTextColumn Header="Scheduled Date" Binding="{Binding Scheduled_Date}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>