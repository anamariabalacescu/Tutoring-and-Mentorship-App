<Page x:Class="app_login.PendingLessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_login"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="PendingLessonsPage">

    <Grid>
        <DataGrid x:Name="myDataGrid" AutoGenerateColumns="False" Background="Transparent" MouseDoubleClick="doubleclick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Professor" Binding="{Binding ID_Prof}" />
                <DataGridTextColumn Header="Student" Binding="{Binding ID_Std}" />
                <DataGridTextColumn Header="Subject" Binding="{Binding ID_Subj}" />
                <DataGridTextColumn Header="Scheduled Date" Binding="{Binding Programare}" />
                <DataGridTextColumn Header="Status" Binding="{Binding StatusProgramare}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>